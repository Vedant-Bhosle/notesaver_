    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Philosopher&display=swap');
        @import url('https://fonts.googleapis.com/css2?family=Questrial&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing:
                border-box;
            font-family: 'Poppins', sans-serif;


        }

        .maincontainer {

            width: 100vw;
            height: 89vh;
            display: flex;
            justify-content: center;

            align-items: center;




        }

        .wrapper {

            width: 390px;


            text-align: center;
            border-radius: 1.5rem;
            overflow: hidden;
            box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;

        }

        .field {
            margin-top: 2rem;
        }

        .label {
            margin-left: -1rem;
        }

        .submitbtn {
            padding: 0.6rem 8.1rem;
            background: #0c373b;
            color: white;
            font-size: 20px;
            border-radius: 6px;
        }

        .title {
            padding-top: 1.5rem;
            padding-bottom: 1.5rem;
            background: #0c373b;
            color: white;
            font-size: 28px;


        }

        .inp {
            border: 1px solid rgb(13, 49, 40);
            border-radius: 5px;
            width:328px;
        }

        .inp:focus {
            outline: #275052;
            border-radius: 3px solid #29465B;

        }

        .inp_submit_btn:active {
            transform: scale(0.95);
        }


        .navbar {
            background: #fbfbfb;
            box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
            box-shadow: rgba(50, 50, 93, 0.25) 0px 6px 12px -2px, rgba(0, 0, 0, 0.3) 0px 3px 7px -3px;
            color: #29465B;
        }

        .navbar-brand {
            color: #29465B;
            font-weight: bold;
            text-decoration: none;
            font-size: 28px;
            font-family: 'Philosopher', sans-serif;

        }


        .navitem {
            color: #29465B;
            text-decoration: none;
            font-family: 'Questrial', sans-serif;
            font-size: 19px;
            font-weight: bold;
            margin: auto 20px;
        }

        .navitem:hover {
            color: #0d161d;

        }

        .navbar-nav {
            margin: 0px auto;
            margin-left: 220px;
        }




        .footer {
            display: flex;
            justify-content: space-around;


        }


        @media only screen and (max-width: 600px) {
            .footer {
                display: block;
            }
        }

        @media (max-width: 350px) {
            .wrapper {
                width: 100vw;
                margin: 1rem 0;
            }
        }

        @media (max-width:380px) {
            .navitem {
                margin-top: 1rem;
                margin-left: -5.5rem;

            }
        }
    </style>

</head>

