    <nav class="navbar navbar-expand-lg sticky-md-top sticky-sm-top navbar-light d-flex justify-content-between">
        <div class="container-fluid ">
            <a class="navbar-brand">NoteSaver</a>
            <button class="navbar-toggler " type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mb-2 mb-lg-0  d-flex ">
                    <li class="nav-item">
                        <a class="navitem" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="navitem" href="/mynotes">My Notes</a>
                    </li>
                    <li class="nav-item">
