    <div class="container">
        <h1 class="heading mt-3 mb-4">My Notes: </h1>

        <a href="/createnote" class="createbtn">Create Note</a>
    </div>


    <br><br>
    <div class="container">


        <div class="accordion" id="accordionExample">

            {{#each notes}}
            <div class="container mt-1 mb-3">
                <div class="card border-dark">
                    <h5 class="card-header notetitle  text-white">{{this.title}}</h5>
                    <div class="card-body bg-light">

                        <h5 class="card-text">{{this.description}}</h5>
                        <a href="/delete/{{this.id}}"
                            onclick="return confirm('Are you sure,you want to delte this note?')" type="button"
                            class="btn btn-danger px-4">Delete</a>
                        <a href="/updatenote/{{this.id}}" class="btn btn-primary px-4"> Edit </a>
                    </div>
                </div>
            </div>

            {{/each}}
        </div>

    </div>

